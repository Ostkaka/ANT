<Actor type="spawnSensor" resource="actors\sensorActor">
	<TransformComponent>
		<Position x="-50" y="0"/>
		<Rotation angle="180"/>
	</TransformComponent>
	<SFMLRectanglePrimitiveComponent>
		<Size x="50" y="50"/>
		<Color r="1" g="1" b="1" a="1"/>
		<Filled>0</Filled>
	</SFMLRectanglePrimitiveComponent>
	<PhysicsComponent>
		<Shape>Box</Shape>
		<MotionState>STATIC</MotionState>
		<IsSensor>1</IsSensor>
		<RigidBodyTransform>
			<Scale x="25" y="25" z="1"/>
		</RigidBodyTransform>
	</PhysicsComponent>

	<BaseScriptComponent>
        <ScriptObject constructor="AddActor" destructor="RemoveActor" />
        <ScriptData   actorType="spawnActor" />
	</BaseScriptComponent>		
